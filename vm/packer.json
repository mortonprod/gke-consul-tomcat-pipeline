{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "region": "eu-west-2",
    "consul_version": "1.0.0",
    "ami_west_1": "",
    "ami_west_2": "ami-ea4ba68d"

  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `region`}}",
    "source_ami": "{{user `ami_west_2`}}",
    "instance_type": "t2.small",
    "ssh_username": "ubuntu",
    "ami_name": "personal-ubuntu-{{timestamp}}",
    "tags": {
      "OS_Version": "Ubuntu"
    }
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "/Users/alexandermorton/.ssh",
      "destination": "/home/ubuntu/.ssh"
    },
    {
      "type": "file",
      "source": "/Users/alexandermorton/.gitconfig",
      "destination": "/home/ubuntu/.gitconfig"
    },
    {
      "type": "shell",
      "script": "./provision.sh"
    }
  ]
}
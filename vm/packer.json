{
  "variables": {
      "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
      "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
      "region": "eu-west-2",
      "consul_version": "1.0.0",
      "ami_west_1": "",
      "ami_west_2": "ami-6d263d09"

  },
  "builders": [
      {
          "type": "amazon-ebs",
          "access_key": "{{user `aws_access_key`}}",
          "secret_key": "{{user `aws_secret_key`}}",
          "region": "{{user `region`}}",
          "source_ami": "{{user `ami_west_2`}}",
          "instance_type": "t2.micro",
          "ssh_username": "ec2-user",
          "ami_name": "amazon-ebs-vagrant-kubernetes-{{timestamp}}",
          "tags": {
              "OS_Version": "Amazon Linux 2"
          }
      }
  ],
  "provisioners": [
      {
          "type": "file",
          "source": "{{template_dir}}/mnt",
          "destination": "/tmp/mnt",
          "pause_before": "5s"
      },
      {
        "type": "shell",
        "inline": [
            "yum -y install vagrant"
        ],
        "pause_before": "5s"
      }
  ]
}